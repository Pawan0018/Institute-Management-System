@model InstitudeManagement.Models.Employee

@{
    ViewData["Title"] = "Details";
}
<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <a href="/" class="navbar-brand">
            <img src="~/Images/Picsart_24-12-07_18-34-26-772 (1).png" style="width:80px;" alt="Logo" />
        </a>
        <h1 class="display-4 fw-bold mx-auto text-center text-white">Employee Details</h1>
    </div>
</nav>



<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <h3 class="text-primary text-center">Employee Information</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4 fw-bold">Gender</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                <dt class="col-sm-4 fw-bold">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4 fw-bold">Contact Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactNo)</dd>

                <dt class="col-sm-4 fw-bold">Department</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Department)</dd>

                <dt class="col-sm-4 fw-bold">Specialized Subject</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SpecializedSubject)</dd>

                <dt class="col-sm-4 fw-bold">Designation</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Designation)</dd>

                <dt class="col-sm-4 fw-bold">Date of Joining</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfJoing)</dd>

                <dt class="col-sm-4 fw-bold">Salary</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Salary)</dd>

                <dt class="col-sm-4 fw-bold">ID Proof Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdproofType)</dd>

                <dt class="col-sm-4 fw-bold">ID Proof Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdproofNumber)</dd>

                <dt class="col-sm-4 fw-bold">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4 fw-bold">Qualification</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Qualification)</dd>

                <dt class="col-sm-4 fw-bold">CurrentAddress</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CurrentAddress)</dd>

                <dt class="col-sm-4 fw-bold">PermanentAddress</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PermanentAddress)</dd>

                <dt class="col-sm-4 fw-bold">MaritalStatus</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaritalStatus)</dd>

                <dt class="col-sm-4 fw-bold">PreviesExperiance</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PreviesExperiance)</dd>

                <dt class="col-sm-4 fw-bold">ExperianceInYear</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ExperianceInYear)</dd>
            </dl>
            <hr />
            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="EmployeeTable" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button class="btn btn-success" onclick="window.print();">
                    <i class="fas fa-print"></i> Print
                </button>
            </div>
        </div>
    </div>
</div>
