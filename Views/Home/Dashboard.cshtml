<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Institute Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
       .stat-item {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
    }


    .stat-box {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat-box h2 {
        font-size: 18px;
        font-weight: 600;
    }

    .stat-box i {
        font-size: 30px;
        margin-right: 10px;
        color: #007bff;
       
    }

    .green {
        color: green;
        font-weight: bold;
    }

    .red {
        color: red;
        font-weight: bold;
    }

   
    

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

            footer a {
                color: #4a90e2;

                text-decoration: none;
            }
    </style>
</head>
<body>
    <header class="text-white py-3">
        

        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a><img src="~/Images/Picsart_24-12-07_18-34-26-772 (1).png" style="width:80px;" /></a>
                <h1 style="color:black;">INSTITUTE MANAGEMENT SYSTEM</h1>
                <form class="d-flex">
                    <a asp-controller="Home" asp-action="Logout" class="btn btn-danger">Logout</a>
                   
                </form>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a asp-action="Table" asp-controller="User" class="btn btn-dark">Inquiry</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="AddmissionTable" asp-controller="AddmissionController1" class="btn btn-dark">Addmission</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Click" asp-controller="Payment" class="btn btn-dark">Payment</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Payment" asp-controller="Payment" class="btn btn-dark">Transaction</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Balance" asp-controller="Balance" class="btn btn-dark">Balance</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="CourseTable" asp-controller="Course" class="btn btn-dark">Course</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="EmployeeTable" asp-controller="Employee" class="btn btn-dark">Employee</a>
                        </li>
                       
                        <li class="nav-item">
                            <a asp-action="Contact" asp-controller="Home" class="btn btn-dark">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="About" asp-controller="Home" class="btn btn-dark">About</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Notes" asp-controller="Notes" class="btn btn-dark">Notes</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main class="container my-5">
        <div class="stats row g-4">
            <!-- Total Enquiries with Icon -->
            <div class="col-md-6 stat-item text-center">
                <div class="stat-box">
                    <h2><i class="fas fa-envelope"></i> Total Enquiries: <span class="badge bg-success">@ViewData["TotalEnquiries"]</span></h2>
                </div>
            </div>

            <!-- Total Admissions with Icon -->
            <div class="col-md-6 stat-item text-center">
                <div class="stat-box">
                    <h2><i class="fas fa-graduation-cap"></i> Total Admissions: <span class="badge bg-danger">@ViewData["TotalAdmissions"]</span></h2>
                </div>
            </div>

            <!-- Total Employee with Icon -->
            <div class="col-md-6 stat-item text-center">
                <div class="stat-box">
                    <h2><i class="fas fa-users"></i> Total Employee: <span class="badge bg-danger">@ViewData["TotalEmployee"]</span></h2>
                </div>
            </div>

            <!-- Total Course with Icon -->
            <div class="col-md-6 stat-item text-center">
                <div class="stat-box">
                    <h2><i class="fas fa-book"></i> Total Course: <span class="badge bg-danger">@ViewData["TotalCource"]</span></h2>
                </div>
            </div>

            <!-- Total Collection with Icon -->
            <div class="col-md-6 stat-item text-center">
                <div class="stat-box">
                    <h2><i class="fas fa-wallet"></i> Total Collection: <span class="badge bg-success">900000</span></h2>
                </div>
            </div>

            <!-- Total Billing with Icon -->
            <div class="col-md-6 stat-item text-center">
                <div class="stat-box">
                    <h2><i class="fas fa-file-invoice-dollar"></i> Total Billing: <span class="badge bg-danger">1200000</span></h2>
                </div>
            </div>
        </div>
    </main>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
