@model InstitudeManagement.Models.Register

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Register</h1>
    <h4 class="text-center text-secondary">Create Your Account</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Register" class="p-4 shadow rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="" disabled selected>Select your gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>


                <div class="form-group mt-3">
                    <label asp-for="Dob" class="form-label">Date of Birth</label>
                    <input asp-for="Dob" class="form-control" type="date" />
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter a password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <input type="submit" value="Register" class="btn btn-primary btn-block" />
                </div>

                <div class="text-center mt-3">
                    <p class="mb-0">
                        Already have an account?
                        <a asp-action="Login" class="text-primary">Login here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

   
</div>
