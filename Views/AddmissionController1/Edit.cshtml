                </tr>
                <tr>
                    <td><label asp-for="Gender" class="form-label">Gender:</label></td>
                    <td><input asp-for="Gender" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="Dob" class="form-label">Date of Birth:</label></td>
                    <td><input asp-for="Dob" type="date" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="ContactNo" class="form-label">Contact Number:</label></td>
                    <td><input asp-for="ContactNo" type="tel" class="form-control" /></td>
