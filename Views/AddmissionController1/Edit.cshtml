            <h3 class="text-secondary">Admission Details</h3>
            <table class="table table-bordered">
                <tr>
                    <td><label asp-for="AdmissionTakenBy" class="form-label">Admission Taken By:</label></td>
                    <td><input asp-for="AdmissionTakenBy" class="form-control" /></td>
                </tr>
            </table>

            <div class="text-center">
                <input type="submit" value="Save Changes" class="btn btn-success px-5 py-2" />
                <a asp-action="AddmissionTable" class="btn btn-secondary ms-3">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Confirm before submitting the form
        document.getElementById("editForm").addEventListener("submit", function (e) {
            const confirmed = confirm("Are you sure you want to update this admission?");
            if (!confirmed) {
                e.preventDefault(); // Prevent form submission
            }
        });



    </script>
}
