            <h3 class="text-secondary">Education Details:</h3>
            <table class="table table-bordered">
                <tr>
                    <td><label asp-for="Qualification" class="form-label">Qualification:</label></td>
                    <td><input asp-for="Qualification" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="PreviousSchoolClg" class="form-label">Previous School/College:</label></td>
                    <td><input asp-for="PreviousSchoolClg" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="Marks" class="form-label">Marks:</label></td>
                    <td><input asp-for="Marks" class="form-control" /></td>
