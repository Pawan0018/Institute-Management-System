                    <td><input asp-for="Dicount" class="form-control" /></td>
                </tr>

                <tr>
                    <td><label asp-for="DicountedCourceFees" class="form-label">DicountedCourceFees:</label></td>
                    <td><input asp-for="DicountedCourceFees" class="form-control" /></td>
                </tr>
            </table>

            <h3 class="text-secondary">Installment Details</h3>
            <table class="table table-bordered">
                <tr>
                    <td><label asp-for="Installment" class="control-label">Installment:</label></td>
                    <td><input asp-for="Installment" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="FirstDate" class="control-label">First Date:</label></td>
                    <td><input asp-for="FirstDate" type="date" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="FristInsta" class="control-label">First Installment:</label></td>
