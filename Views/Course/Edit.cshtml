@model InstitudeManagement.Models.Course1

@{
    ViewData["Title"] = "Edit";
}


<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <a href="/" class="navbar-brand">
            <img src="~/Images/Picsart_24-12-07_18-34-26-772 (1).png" style="width:80px;" alt="Logo" />
        </a>
        <h1 class="display-4 fw-bold mx-auto text-center text-white">Update Cource</h1>
    </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Edit Form in Table Format -->
            <div class="card shadow-sm border-0 rounded">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0">Course Details</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <table class="table table-borderless align-middle">
                            <tbody>
                                <tr>
                                    <th class="text-secondary w-25"><strong>Course Name</strong></th>
                                    <td>
                                        <input asp-for="CourseName" class="form-control" />
                                        <span asp-validation-for="CourseName" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Front End</strong></th>
                                    <td>
                                        <input asp-for="FrontEnd" class="form-control" />
                                        <span asp-validation-for="FrontEnd" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Back End</strong></th>
                                    <td>
                                        <input asp-for="BackEnd" class="form-control" />
                                        <span asp-validation-for="BackEnd" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Database Language</strong></th>
                                    <td>
                                        <input asp-for="DataBaseLanguage" class="form-control" />
                                        <span asp-validation-for="DataBaseLanguage" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Duration</strong></th>
                                    <td>
                                        <input asp-for="Duration" class="form-control" />
                                        <span asp-validation-for="Duration" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Fees</strong></th>
                                    <td>
                                        <input asp-for="Fees" class="form-control" />
                                        <span asp-validation-for="Fees" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Course Format</strong></th>
                                    <td>
                                        <input asp-for="CourseFormate" class="form-control" />
                                        <span asp-validation-for="CourseFormate" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-secondary"><strong>Course Description</strong></th>
                                    <td>
                                        <textarea asp-for="CourseDescription" class="form-control" rows="3"></textarea>
                                        <span asp-validation-for="CourseDescription" class="text-danger"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4 me-2">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <a asp-action="CourseTable" class="btn btn-secondary px-4">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
