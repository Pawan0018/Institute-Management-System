@model InstitudeManagement.Models.Course1

@{
    ViewData["Title"] = "Delete";
}
<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <a href="/" class="navbar-brand">
            <img src="~/Images/Picsart_24-12-07_18-34-26-772 (1).png" style="width:80px;" alt="Logo" />
        </a>
        <h1 class="display-4 fw-bold mx-auto text-center text-white"> Delete Cource</h1>
    </div>
</nav>



<div class="container mt-5">
  

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Course Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.CourseName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseName)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.FrontEnd)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FrontEnd)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.BackEnd)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BackEnd)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.DataBaseLanguage)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DataBaseLanguage)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.Duration)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Duration)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.Fees)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Fees)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.CourseFormate)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseFormate)</dd>

                <dt class="col-sm-4 text-danger">@Html.DisplayNameFor(model => model.CourseDescription)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseDescription)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <!-- Trigger the modal -->
        <button type="button" class="btn btn-danger btn-lg px-5 py-2" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a class="btn btn-secondary btn-lg px-5 py-2" asp-action="CourseTable">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong>@Model.CourseName</strong>?
                @* <p class="fs-5 text-center">Are you sure you want to delete the course <strong class="text-danger">@Model.CourseName</strong>? This action cannot be undone.</p> *@
            </div>
            <div class="modal-footer justify-content-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="fas fa-check"></i> Yes, Delete
                    </button>
                </form>
                <button type="button" class="btn btn-secondary btn-lg px-4" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>
