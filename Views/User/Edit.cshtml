@model InstitudeManagement.Models.Inquiry

@{
    ViewData["Title"] = "Edit Inquiry";
}

<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <a href="/" class="navbar-brand">
            <img src="~/Images/Picsart_24-12-07_18-34-26-772 (1).png" style="width:80px;" alt="Logo" />
        </a>
        <h1 class="display-4 fw-bold mx-auto  text-white text-center">Update Student Inquiry</h1>
    </div>
</nav>



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Card for Form -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-secondary text-white text-center">
                    <h4 class="mb-0">Inquiry Form</h4>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <!-- Name -->
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">Name</label>
                                <input asp-for="Name" class="form-control shadow-sm" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <!-- Gender -->
                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                                <select asp-for="Gender" class="form-select shadow-sm">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- Date of Birth -->
                            <div class="col-md-6">
                                <label asp-for="Dob" class="form-label fw-bold">Date of Birth</label>
                                <input asp-for="Dob" class="form-control shadow-sm" type="date" />
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                            <!-- Contact -->
                            <div class="col-md-6">
                                <label asp-for="Contact" class="form-label fw-bold">Contact</label>
                                <input asp-for="Contact" class="form-control shadow-sm" />
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- Address -->
                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label fw-bold">Address</label>
                                <input asp-for="Address" class="form-control shadow-sm" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- City -->
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-bold">City</label>
                                <input asp-for="City" class="form-control shadow-sm" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="InquiryDate" class="form-label fw-bold">InquiryDate</label>
                                <input asp-for="InquiryDate" class="form-control shadow-sm" />
                                <span asp-validation-for="InquiryDate" class="text-danger"></span>
                            </div>
                            <!-- Qualification -->
                            <div class="col-md-6">
                                <label asp-for="Qualification" class="form-label fw-bold">Qualification</label>
                                <input asp-for="Qualification" class="form-control shadow-sm" />
                                <span asp-validation-for="Qualification" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- Email -->
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Email" class="form-control shadow-sm" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <!-- Course -->
                            <div class="col-12 mb-3">
                                <label asp-for="Course" class="form-label">Course</label>
                                <select asp-for="Course" class="form-control" asp-items="ViewBag.Courses">
                                    <option value="">--Select Course--</option>
                                </select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- Fees -->
                            <div class="col-md-6">
                                <label asp-for="Fees" class="form-label fw-bold">Fees</label>
                                <input asp-for="Fees" class="form-control shadow-sm" type="number" />
                                <span asp-validation-for="Fees" class="text-danger"></span>
                            </div>
                            <!-- Remark -->
                            <div class="col-md-6">
                                <label asp-for="Remark" class="form-label fw-bold">Remark</label>
                                <textarea asp-for="Remark" class="form-control shadow-sm" rows="3"></textarea>
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- Inquiry Taken By -->
                            <div class="col-md-12">
                                <label asp-for="InquiryTakonBy" class="form-label fw-bold">Inquiry Taken By</label>
                                <input asp-for="InquiryTakonBy" class="form-control shadow-sm" />
                                <span asp-validation-for="InquiryTakonBy" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow me-3">Save Changes</button>
                            <a asp-action="Table" class="btn btn-secondary btn-lg shadow">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
